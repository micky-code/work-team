---
import LanguagePicker from '../components/LanguagePicker.astro';
import { getLangFromUrl, useTranslations } from '../i18n/utils';

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<ul class="flex flex-col md:flex-row items-center justify-between bg-gradient-to-r from-blue-600 via-indigo-500 to-purple-600 text-white p-6 rounded-2xl shadow-lg space-y-4 md:space-y-0 md:px-14 border-b-2 border-white/30">
  <!-- Logo and Company Name -->
  <li class="flex items-center space-x-4">
    <!-- Logo -->
    <img 
      src="../../public/po.png" 
      alt="Company Logo" 
      class="w-14 h-14 object-cover rounded-full"
    />
    <!-- Company Name -->
    <span class="text-2xl font-bold text-white">Poscar</span>
  </li>

  <!-- Home Link -->
  <li>
    <a 
      href={`/${lang}/`} 
      class="text-white font-medium px-5 py-3 rounded-lg transition-all duration-300 hover:bg-white/20 hover:text-blue-100 focus:bg-white/30 focus:text-blue-200"
    >
      {t('nav.home')}
    </a>
  </li>

  <!-- Products & Services with Mega Menu -->
  <li class="relative group">
    <a 
      href="#" 
      class="text-white font-medium px-5 py-3 rounded-lg transition-all duration-300 hover:bg-white/20 hover:text-blue-100 focus:bg-white/30 focus:text-blue-200"
    >
      {t('nav.products_services')}
    </a>
    <!-- Mega Menu -->
    <div class="absolute hidden group-hover:block bg-white shadow-xl p-6 rounded-2xl w-72 left-0 top-full">
      <div class="grid grid-cols-2 gap-6">
        <div>
          <h3 class="text-lg font-semibold text-gray-700 mb-3">Education</h3>
          <ul>
            <li><a href="https://wikischool.asia" class="text-blue-600 hover:text-blue-800">{t('nav.kindergarten_k12')}</a></li>
            <li><a href="#" class="text-blue-600 hover:text-blue-800">{t('nav.university_solution')}</a></li>
            <li><a href="#" class="text-blue-600 hover:text-blue-800">{t('nav.enrollment')}</a></li>
          </ul>
        </div>
        <div>
          <h3 class="text-lg font-semibold text-gray-700 mb-3">Enterprise</h3>
          <ul>
            <li><a href="https://vithean.com" class="text-blue-600 hover:text-blue-800">{t('nav.vithean_page')}</a></li>
            <li><a href="#" class="text-blue-600 hover:text-blue-800">{t('nav.attendance_card_device')}</a></li>
            <li><a href="#" class="text-blue-600 hover:text-blue-800">{t('nav.hrm_solution')}</a></li>
          </ul>
        </div>
      </div>
    </div>
  </li>

  <!-- About Us Link -->
  <li class="relative group">
    <a 
      href={`/${lang}/about/`} 
      class="text-white font-medium px-5 py-3 rounded-lg transition-all duration-300 hover:bg-white/20 hover:text-blue-100 focus:bg-white/30 focus:text-blue-200"
    >
      {t('nav.about')}
    </a>
    <!-- Dropdown Menu -->
    <div class="absolute hidden group-hover:block bg-white shadow-xl p-6 rounded-2xl w-56 left-0 top-full">
      <ul>
        <li><a href="#" class="text-blue-600 hover:text-blue-800">{t('nav.company_profile')}</a></li>
        <li><a href="#" class="text-blue-600 hover:text-blue-800">{t('nav.our_customers')}</a></li>
        <li class="relative group">
          <a href="#" class="text-blue-600 hover:text-blue-800">{t('nav.legal')}</a>
          <!-- Legal Submenu -->
          <div class="absolute hidden group-hover:block bg-white shadow-xl p-6 rounded-2xl w-56 left-full top-0">
            <ul>
              <li><a href="#" class="text-blue-600 hover:text-blue-800">{t('nav.privacy')}</a></li>
              <li><a href="#" class="text-blue-600 hover:text-blue-800">{t('nav.terms_conditions')}</a></li>
            </ul>
          </div>
        </li>
      </ul>
    </div>
  </li>

  <!-- Blogs Link -->
  <li>
    <a 
      href={`/${lang}/blogs/`} 
      class="text-white font-medium px-5 py-3 rounded-lg transition-all duration-300 hover:bg-white/20 hover:text-blue-100 focus:bg-white/30 focus:text-blue-200"
    >
      {t('nav.blogs')}
    </a>
  </li>

  <!-- Contact Us Link -->
  <li>
    <a 
      href={`/${lang}/contact/`} 
      class="text-white font-medium px-5 py-3 rounded-lg transition-all duration-300 hover:bg-white/20 hover:text-blue-100 focus:bg-white/30 focus:text-blue-200"
    >
      {t('nav.contact_us')}
    </a>
  </li>

  <!-- Language Picker -->
  <li class="flex items-center space-x-4 ml-4">
    <LanguagePicker />
  </li>
</ul>
